@model ABC_Retail_ST10255912_POE.Models.Products

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card">
        <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Title">
        <div class="card-body">
            <h1 class="card-title">@Model.Title</h1>
            <p class="card-text">@Model.Description</p>
            <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
            <a href="/Cart/Add/@Model.ProductID" class="btn btn-primary">Add to Cart</a>
        </div>
    </div>
</div>